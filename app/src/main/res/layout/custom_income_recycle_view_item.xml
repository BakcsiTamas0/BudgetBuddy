<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15sp">

    <ImageView
        android:id="@+id/incomeTypeImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/crypto"/>

    <TextView
        android:id="@+id/incomeTypeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/incomeTypeImage"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/incomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/incomeTypeList"
        android:layout_marginStart="30dp"
        android:inputType="numberDecimal"
        android:hint="Amount..."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/incomeAmount"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:background="@color/red"
        android:text="X"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>