<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15sp"
    android:padding="10dp"
    android:background="@drawable/custom_view_holder_7">

    <ImageView
        android:id="@+id/incomeTypeImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/crypto"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/incomeTypeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/incomeTypeImage"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/incomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/incomeTypeList"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:text="Amount" />

    <ImageView
        android:id="@+id/deleteIncomeItemBtn"
        android:layout_width="64sp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/incomeAmount"
        android:src="@drawable/bin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@drawable/custom_button"/>

</RelativeLayout>