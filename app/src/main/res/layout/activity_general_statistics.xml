<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralStatisticsActivity"
    android:background="@drawable/custom_background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/generalStatisticsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="25dp"
            android:text="General Statistics"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <View
            android:layout_width="310dp"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_view_holder_8">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/statisticsUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="PLACEHOLDER"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Actual income:"/>

                <TextView
                    android:id="@+id/statisticsIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Actual expenses:"/>

                <TextView
                    android:id="@+id/statisticsExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Actual debt:"/>

                <TextView
                    android:id="@+id/statisticsDebt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_holder_8">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Average spending a week:" />

                <TextView
                    android:id="@+id/statisticsAverageWeeklySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Average spending a month:"/>

                <TextView
                    android:id="@+id/statisticsAverageMonthlySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Estimated spending for future:"/>

                <TextView
                    android:id="@+id/statisticsEstimatedSpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_holder_8">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Most money spent in a week:" />

                <TextView
                    android:id="@+id/statisticsMaxWeeklySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Most money spent in a month:" />

                <TextView
                    android:id="@+id/statisticsMaxMonthlySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_holder_8">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Most money spent on in a week:" />

                <TextView
                    android:id="@+id/statisticsMaxWeeklySpendingItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Least money spent on in a week:" />

                <TextView
                    android:id="@+id/statisticsMinWeeklySpendingItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_holder_8">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Most money spent on in a month:" />

                <TextView
                    android:id="@+id/statisticsMaxMonthlySpendingItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="end">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Least money spent on in a month:" />

                <TextView
                    android:id="@+id/statisticsMinMonthlySpendingItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACEHOLDER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_holder_8">
            </View>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/generateStatisticsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:padding="15dp"
            android:text="Generate statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/custom_button"/>

    </LinearLayout>

</LinearLayout>