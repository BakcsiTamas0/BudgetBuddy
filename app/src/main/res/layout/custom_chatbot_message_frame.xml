<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_chatbot_message_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/custom_message_frame">

        <ImageView
            android:id="@+id/chatbot_picture"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/user_icon"/>

        <TextView
            android:id="@+id/chatbot_name"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:text="BudgetBuddy"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/chatbot_picture"/>

        <View
            android:id="@+id/separator"
            android:layout_width="3dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@id/chatbot_name"
            android:background="@color/white">
        </View>

        <TextView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_toEndOf="@id/separator"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/custom_edit_test_background">

        <TextView
            android:id="@+id/chatbot_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</FrameLayout>