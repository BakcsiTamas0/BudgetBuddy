<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <gradient android:startColor="#4f4ed7" android:centerColor="#f55a9b" android:endColor="#4f4ed7" android:type="linear"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/transparent"/>
            <corners android:radius="25dp"/>
        </shape>

    </item>

</layer-list>
